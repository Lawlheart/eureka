<%= render 'layouts/header', title: @user.username, subtitle: '| Projects' %>

<div class="flex-container" id="projects">
  <% @user.projects.each do |project| %>
      <%= render 'projects/project_card', project: project, blueprint: project.blueprint %>
  <% end %>
</div>

<%= render 'layouts/header', title: @user.username, subtitle: '| Blueprints' %>

<div class="flex-container" id="blueprints">
  <% @user.blueprints.each do |blueprint| %>
      <%= render 'blueprints/blueprint_card', blueprint: blueprint %>
  <% end %>
</div>