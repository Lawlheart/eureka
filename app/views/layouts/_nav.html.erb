<!-- Nav -->
<nav id="nav">
  <ul>
    <li id="logo" class="hidden">Eureka</li>
    <li class="brand">
      <%= image_tag 'logo.png', style: 'height: 70px;' %>
    </li>
    <li class="<%= 'current' if current_page?(root_path) %>"><%= link_to 'Home', root_path %></li>
    <li class="<%= 'current' if current_page?(blueprints_path) %>"><%= link_to 'Blueprints', blueprints_path %></li>

    <% if current_user %>
        <li class="<%= 'current' if current_page?(edit_user_registration_path) %>">
          <%= link_to 'Settings', edit_user_registration_path %>
